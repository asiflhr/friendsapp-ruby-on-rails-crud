<div class='card' style='width:fit-content; padding:20px; border-radius:20px'>
  <%= render @friend %>
</div>

<div class='mt-5'>
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:'btn btn-warning' %>  | 
  <%= link_to "Back to friends", friends_path, class:'btn btn-info' %>

  <%= button_to "Destroy this friend", @friend, method: :delete, class:'btn btn-danger mt-2' %>
</div>
